        # Wait for completion
        for t in threads:
            t.join()
        
        # All should have correct permissions
        for result in results:
            if isinstance(result, int):
                assert result == 0o700
            else:
                # Should not have exceptions
                pytest.fail(f"Unexpected exception: {result}")
