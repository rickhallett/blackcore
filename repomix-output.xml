            "relation": {"type": "relation", "relation": list},
            "people": {"type": "people", "people": list},
        }
        
        if prop_type not in expected_formats:
            return False
        
        expected = expected_formats[prop_type]
        
        # Check type field
        if prop_value.get("type") != expected["type"]:
