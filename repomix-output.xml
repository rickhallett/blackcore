                ))
            
            if "type" not in block:
                result.add_error(ValidationError(
                    error_type=ValidationErrorType.REQUIRED_ERROR,
                    field_name=f"children[{i}]",
                    message="Block must have a type",
                    value=block
                ))
        
        return result
