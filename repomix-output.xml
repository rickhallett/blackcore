        max_active = 0
        
        async def process_item(item: int) -> int:
            nonlocal active_count, max_active
            active_count += 1
            max_active = max(max_active, active_count)
            await asyncio.sleep(0.05)  # Longer delay to ensure overlap
            active_count -= 1
