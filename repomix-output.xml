                else:
                    date_result = self._validate_date_string(start, f"{prop_name}.start")
                    result.merge(date_result)
                
                # Validate end date if present
                end = date_value.get("end")
                if end is not None:
                    date_result = self._validate_date_string(end, f"{prop_name}.end")
                    result.merge(date_result)
                
