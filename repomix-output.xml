from pathlib import Path
from typing import Optional, Dict, Any
from .models import Config
from . import constants


class ConfigManager:
    """Manages configuration loading and validation."""

    DEFAULT_CONFIG = {
        "notion": {
            "databases": {
                "people": {
                    "name": "People & Contacts",
                    "mappings": {
